{
  "compileOnSave": false,
  "compilerOptions": {
    "inlineSourceMap": true,
    "lib": [ "es5", "dom", "es2016", "es2015.core", "es2015.promise", "es2015.proxy" ],
    "module": "commonjs",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "sourceMap": false,
    "strictNullChecks": true,
    "target": "es6"
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
